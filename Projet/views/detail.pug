html
    header
        title #{question.title}
        h1
            a.title(href="/") StackOverflow version cheap
        if user
            a(href="") #{user.firstname}
            a(href="/api/logout") Deconnexion
            if user.role == "admin"
                a(href="/users") Gestion user
        else
            a(href="/login") Connexion
            a(href="/signup") Inscription
        link(rel="stylesheet", href="/css/style.css")
        link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet")
    body
        div
            p.resolvedPost #{question.resolved}
            p.content #{question.content}
            if user
                if user.role == "admin" || user.id == question.user.id
                   a(href="/api/deleteQues/" + question.id) X
                   a(href="/editQues/" + question.id) Editer Question
                   a(href="/api/resolved/" + question.id) RÃ©soudre

                p Commentaires :
                    for comment in question.comments
                        article
                            p De #{comment.user.firstname}
                            p #{comment.content}

                            if user.role == "admin" || user.id == comment.user.id
                                a(href="/api/deleteCom/" + comment.id +"/"+ question.id) X
                                a(href="/editCom/" + comment.id ) Editer Commentaire



                    form(method="POST")
                        textarea(name="comment", placeholder="Commentaire", rows=7, cols=50)
                        br
                        button(type="submit") Commenter
            else
                p Veuilliez vous connecter pour poster et lire les commentaires

            a(href="/") Retour Menu